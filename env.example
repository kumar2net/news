# NewsAPI Configuration
# Primary NewsAPI key reference (preferred by Vercel)
NEWSAPI_KEY=your_news_api_key_here
# Legacy compatibility key (optional fallback)
NEWS_API_KEY=your_news_api_key_here
NEWS_API_BASE_URL=https://newsapi.org/v2

# NewsData.io Configuration (Better non-English coverage)
# Get your key from: https://newsdata.io/register
NEWSDATA_API_KEY=your_newsdata_api_key_here

# News Provider Selection
# Options: 'newsapi' or 'newsdata'
# newsdata recommended for non-English content
DEFAULT_NEWS_PROVIDER=newsapi

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# Optional: News preferences
DEFAULT_COUNTRY=us
DEFAULT_LANGUAGE=en
DEFAULT_PAGE_SIZE=20
